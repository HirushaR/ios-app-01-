#:import utils kivy.utils
<HomeScreen>
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#39B3F2")
            Rectangle:
                size: self.size
                pos: self.pos

        Label:
               #streak label
            pos_hint:{"top":.7, "left":1}
            size_hint:1,.1
            text:"12 Day streak"
            id: streak_label

        ScrollView:
            pos_hint:{"top":.6, "left":1}
            size_hint:1,.4
            GridLayout:
                #banner grid
                id: banner_grid
                cols:1
                spacing: 10
                size_hint_y: None
                height: self.minimum_height
                row_default_height:'100dp'
                row_force_default:True

        GridLayout:
              #add 3 menu buttons here
            rows:1
            pos_hint:{"top":.2, "left":1}
            size_hint:1,.2
            ImageButton:
                source: "icons/the_world.png"
                on_release:
                    print("release add friend button")
            ImageButton:
                source: "icons/cycle.png"
                on_release:
                    print("release Cycle button")
            ImageButton:
                source: "icons/tools.png"
                on_press:
                    self.source= "icons/thumb.png"
                on_release:
                    self.source= "icons/tools.png"
                    print("release tool button")



